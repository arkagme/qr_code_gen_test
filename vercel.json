{
  "version": 2,
  "builds": [
    {
      "src": "api/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/index.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.js"
    },
    {
      "src": "/r/(.*)",
      "dest": "api/app.js"
    },
    { 
      "handle": "filesystem" 
    },
    {
      "src": "/dashboard/(.*)",
      "dest": "dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ]
}
